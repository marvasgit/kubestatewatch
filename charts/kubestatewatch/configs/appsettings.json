      "enabled": {{ .Values.slack.enabled }},
      "channel": {{ .Values.slack.channel | quote }},
      "token": {{ .Values.slack.token | quote }}
    },
    "slackwebhook": {
      "enabled": {{ .Values.slackwebhook.enabled }},
      "channel": {{ .Values.slackwebhook.channel | quote }},
